<h1>Edit Review</h1>

<%= simple_form_for([@book,@review]) do |f| %>
<div id="star-rating", data-score=<%=@review.rating%>>
  <label>Rating </label>
</div>
<%= f.input :comment %>
<%= f.button :submit %>
<% end %>

<script>
$('#star-rating').raty({
    path: '/assets',
    scoreName: 'review[rating]',
    score: function() {
          return $(this).attr('data-score');}
});
</script>
